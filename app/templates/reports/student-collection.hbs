<div class="student-collection" style={{bgUrl}}>
  {{#if isIframeMode}}
    <div class = "player-title-panel">
      <div class="back-to-collection pull-left" {{action 'closePlayer'}}  data-toggle="tooltip" data-placement="bottom" title="{{t 'common.close'}}" tabindex="1">
        <div role="button" aria-label="close" class="nav-icon-container">
          {{gru-icon name='ic_close'}}
        </div>
      </div>
      <div class="pull-left content-title {{unless collection.isCollection 'assessment'}}">
        <div class="title-info">
          <i class="icon pull-left"></i>
          <p class="title pull-left">{{collection.title}}</p>
        </div>
      </div>
    </div>
  {{/if}}
  {{partial 'partials/student-context'}}
  
  {{player/gru-player-summary-footer
    isShowStudyTimer = isShowStudyTimer
    isShowFeedbackContainer = isShowFeedbackContainer
    collection=collection
    isIframeMode=isIframeMode
    isShowActivityFeedback=isShowActivityFeedback
    isPublicClass=isPublicClass
    isShowStudyTimerWidget=isShowStudyTimerWidget
    showTimer="showTimer"
    showFeedbackContainer="showFeedbackContainer"
    isCollection = collection.isCollection
    isStandalonePlayer = true
    onClosePlayer = "submitUserFeedback"
    isIframeMode = isIframeMode
    lesson = lesson
    isStudent = isStudent
    backUrl = backUrl
    goBack = "goBack"
  }}
</div>

<div class="resource-content {{if (or isShowStudyTimer isShowFeedbackContainer ) 'resource-back-drop'}}">
  {{#if (and isShowStudyTimer isStudent (not isPublicClass) isShowStudyTimerWidget) }}
    {{gru-study-timer
      studentTimespentData = studentTimespentData
      showTimer = "showTimer"
      isShowPullup = true
    }}
  {{/if}}

  {{#if (and isShowFeedbackContainer isShowActivityFeedback (not isAnonymous))}}
    {{player/gru-activity-feedback
       feedbackContent=collection
       feedbackCategoryLists=feedbackCategory
       categoryLists = userCategoryFeedback
       format = format
       tabindex=2
       isShowFeedback = isShowFeedback
       isStudyPlayer=true
       showFeedbackContainer = "showFeedbackContainer"
    }}
  {{/if}}
</div>
