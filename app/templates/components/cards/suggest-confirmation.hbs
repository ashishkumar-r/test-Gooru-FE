<div class="suggest-confirmation-backdrop" />
<div class="card-panel-container">
  <div class="card-panel-header" style="background-image: url({{collection.thumbnailUrl}})">
    <div class="info">
      <div class="title">{{collection.title}}</div>
      <i class="{{collection.format}}-icons"></i>
    </div>
  </div>
  <div class="content-count-container">
    {{#if (or (eq collection.format 'collection') (eq collection.format 'assessment'))}}
    {{#if (eq contentType 'collection') }}
      <div class="resource" title="{{t 'common.resource'}}" data-toggle="tooltip" data-placement="top" data-trigger="hover">
        <i class="icon"></i>
        <span>{{collection.resourceCount}}</span>
      </div>
    {{/if}}
    <div class="question" title="{{t 'common.question'}}" data-toggle="tooltip" data-placement="top" data-trigger="hover">
      <i class="icon"></i>
      <span>{{collection.questionCount}}</span>
    </div>
    {{/if}}
  </div>
  <div class="suggestion-made-to">
    <p>{{t 'common.suggestion-made-to'}}</p>
    <div class="user-details-container">
      {{#each defaultStudentList as |student|}}
        <div class="user-profile-details">
          <div class="user-profile-img">
            <img src="{{if student.avatarUrl student.avatarUrl student.thumbnail}}" alt="student avatar">
          </div>
          <span class="ellipsis">{{student.lastName}}</span>
        </div>
      {{/each}}
    </div>
  </div>
  <div class="suggestion-profile-list">
    {{#if (gt moreStudentsNumber 0)}}
      <button class="hidden-xs" data-placement="right" data-toggle="popover">
          <span>+ {{moreStudentsNumber}} {{t 'common.more'}}</span>
      </button>
      <button class="hidden visible-xs" data-placement="top" data-toggle="popover">
        <span>+ {{moreStudentsNumber}} {{t 'common.more'}}</span>
      </button>
      <div class="hidden" id="suggestion-profile-details">
        <div class="suggestion-profile-details-popover">
          {{#each students as |student|}}
            <div class="user-profile-details">
              <div class="user-profile-img">
                <img src="{{if student.avatarUrl student.avatarUrl student.thumbnail}}" alt="student avatar">
              </div>
              <span class="ellipsis">{{student.lastName}},&nbsp;&nbsp;&nbsp;{{student.firstName}}</span>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
  </div>
  <div class="card-panel-footer">
    <div class="buttons-container">
      <div class="cancel-btn" onclick={{action "onCancelSuggest"}} onkeypress={{action "onCancelSuggest"}} tabindex={{tabindex}}>
        {{t 'common.cancel'}}
      </div>
      <div class="confirm-btn {{if isGuestAccount 'disable-event'}}" onclick={{action "onConfirmSuggest"}} onkeypress={{action "onConfirmSuggest"}} tabindex={{tabindex}}>
        {{t 'common.confirm'}}
      </div>
    </div>
  </div>
</div>
