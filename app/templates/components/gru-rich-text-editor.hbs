<div class="toolbar-container">
  <div id="wysihtml-toolbar{{editorIndex}}" class="btn-toolbar {{if disableButtons 'hidden'}}" role="toolbar">
      <button type="button" class="btn btn-math bold" data-wysihtml5-command="bold" title="{{t 'gru-rich-text-editor.bold'}}">
        <strong>B</strong>
      </button>
      <button type="button" class="btn btn-math italic" data-wysihtml5-command="italic" title="{{t 'gru-rich-text-editor.italic'}}">
        <i>I</i>
      </button>
      <button type="button" class="btn btn-math underline" data-wysihtml5-command="underline" title="{{t 'gru-rich-text-editor.underline'}}">
        <u>U</u>
      </button>
      {{#unless isCustomEditor}}
        <button type="button" class="btn btn-math superscript" data-wysihtml5-command="superscript" title="{{t 'gru-rich-text-editor.superscript'}}">
          x<sup>2</sup>
        </button>
        <button type="button" class="btn btn-math subscript" data-wysihtml5-command="subscript" title="{{t 'gru-rich-text-editor.subscript'}}">
          x<sub>2</sub>
        </button>
        <button type="button" class="btn  btn-math add-function {{if showExpressionsPanel 'active'}}" title="{{t 'gru-rich-text-editor.expression'}}" {{action 'toggleExpressionsPanel'}}>
          {{t 'gru-rich-text-editor.expressions-panel.create-expression'}}
        </button>
      {{else}}
        <button type="button" class="btn btn-math create-link" data-wysihtml5-command="createLink" title="{{t 'common.link'}}">
          {{t 'common.link'}}
        </button>
        <div class="dialog-create-link" data-wysihtml5-dialog="createLink" style="display: none;">
          <div class="input-container"><span>Link:</span><input data-wysihtml5-dialog-field="href" value="http://"></div>
          <div class="action-container">
            <a class="action-handler" data-wysihtml5-dialog-action="save" title="save">{{t 'gru-submit-confirmation.ok'}}</a>
            <a class="action-handler" data-wysihtml5-dialog-action="cancel" title="cancel">{{t 'gru-submit-confirmation.cancel'}}</a>
          </div>
        </div>
      {{/unless}}
      <button type="button" class="btn btn-math unordered-list" data-wysihtml5-command="insertUnorderedList" title="{{t 'gru-rich-text-editor.bullets'}}">
            {{t 'gru-rich-text-editor.bullets'}}
      </button>
    <div class="expressions-panel {{if showExpressionsPanel 'show'}}">
      <div class="equation-editor">
          <div class="equation-wrapper">
            <!-- Note: Help to edit the matrix content -->
            {{#if showAdvanceEditor}}
              <div class="advanced-equation-wrapper">
                  <textarea class="advanced-text-editor">{{advancedEditItem}}</textarea>
              </div>
            {{/if}}
            <div class="{{if showAdvanceEditor 'hide-editor'}}">
                <span class="math-field{{editorIndex}} math-editor" ></span>
            </div>
              <div class="actions {{if invalidSymbol 'invalid-symbol-text'}}">
                {{#if isEditingExpression}}

                    {{#if invalidSymbol}}
                    <div>
                    <p>{{t 'invalid-symbol'}}</p>
                    </div>
                    {{/if}}

                    <button class="btn btn-primary" {{action 'updateExpression'}}>{{t 'gru-rich-text-editor.expressions-panel.update-expression'}}</button>
                {{else}}

                    {{#if invalidSymbol}}
                    <div>
                    <p>{{t 'invalid-symbol'}}</p>
                    </div>
                    {{/if}}

                    <button class="btn btn-primary" {{action 'insertExpression'}}>{{t 'gru-rich-text-editor.expressions-panel.insert-expression'}}</button>
                {{/if}}
              </div>
          </div>
          <div class="tab-content">
              <div role="tabpanel" class="tab-pane fade in active" id="layout">
                  <div class="border-bottom toolbar-1">
                      <a href="#" class="fraction" data-expression="fraction" title="fraction"></a>
                      <a href="#" class="sqrtn" data-expression="sqrtn" title="sqrtn"></a>
                      <a href="#" class="sqrt" data-expression="sqrt" title="sqrt"></a>
                      <a href="#" class="subscript" data-expression="subscript" title="subscript"></a>
                      <a href="#" class="superscript" data-expression="superscript" title="superscript"></a>
                      <!--<a href="#" class="over-left-arrow" data-expression="over-left-arrow"></a>-->
                      <!--<a href="#" class="over-right-arrow" data-expression="over-right-arrow"></a>-->
                      <a href="#" class="overline" data-expression="overline" title="overline"></a>
                      <a href="#" class="sum" data-expression="sum" title="sum"></a>
                  </div>
                 <div class="border-bottom toolbar-2">
                     <a href="#" class="plus" data-expression="plus" title="plus"></a>
                     <a href="#" class="minus" data-expression="minus" title="minus"></a>
                     <a href="#" class="div" data-expression="div" title="div"></a>
                     <a href="#" class="mult" data-expression="mult" title="mult"></a>
                     <a href="#" class="cdot" data-expression="cdot" title="cdot"></a>
                     <a href="#" class="not-equal" data-expression="not-equal" title="not-equal"></a>
                     <a href="#" class="less" data-expression="lt" title="lt"></a>
                     <a href="#" class="greater" data-expression="gt" title="gt"></a>
                     <a href="#" class="less-equal" data-expression="le" title="le"></a>
                     <a href="#" class="greater-equal" data-expression="ge" title="ge"></a>
                     <a href="#" class="sim" data-expression="sim" title="sim"></a>
                     <a href="#" class="approx" data-expression="approx" title="approx"></a>
                     <a href="#" class="alpha" data-expression="alpha" title="alpha"></a>
                     <a href="#" class="dollar" data-expression="dollar" title="dollar">$</a>
                 </div>
                <div class="toolbar-3">
                    <a href="#" class="pmatrix" data-expression="pmatrix" title="pmatrix"></a>
                    <a href="#" class="Bmatrix" data-expression="Bmatrix" title="Bmatrix"></a>
                    <a href="#" class="vmatrix" data-expression="vmatrix" title="vmatrix"></a>
                    <a href="#" class="angle" data-expression="angle" title="angle"></a>
                    <a href="#" class="measuredangle" data-expression="measuredangle" title="measuredangle"></a>
                    <a href="#" class="infinity" data-expression="infinity" title="infinity"></a>
                    <a href="#" class="bot" data-expression="bot" title="bot"></a>
                    <a href="#" class="parallel" data-expression="parallel" title="parallel"></a>
                    <a href="#" class="sigma" data-expression="sigma" title="sigma"></a>
                    <a href="#" class="theta" data-expression="theta" title="theta"></a>
                    <a href="#" class="pi" data-expression="pi" title="pi"></a>
                </div>
                <div class="advanced-toolbar">
                  {{#each-in advancedMathExpression as | keyName expression | }}
                    <a href="#" class="{{keyName}}" data-expression="{{expression}}" title="{{keyName}}">
                      {{safe-html (katex-math expression)}}
                    </a>
                  {{/each-in}}
                </div>
              </div>
          </div>
      </div>
    </div>
  </div>
  {{#if isUploadIcon}}
    <div class="upload-toolbar {{if disableButtons 'hidden'}}">

      <button type="button" class="btn  btn-math upload audio" data-toggle="tooltip" data-placement="top"  data-html="true"  data-title="<p>{{t 'common.support-file-extensions' fileExtension=audioExtensionsType}}</p> {{t 'common.max-file-size' fileSize=maxFileSize}}" >
        {{#file-picker
        preview=false
        dropzone=false
        fileLoaded=(action 'selectFile')
        readAs="readAsFile"
        errors=filePickerErrors}}
        {{gru-icon name="audiotrack"}}
        {{/file-picker}}
      </button>
      <button type="button" class="btn  btn-math upload video" data-toggle="tooltip" data-placement="top"  data-html="true" title="<p>{{t 'common.support-file-extensions' fileExtension=videoExtensionsType}}</p> {{t 'common.max-file-size' fileSize=maxFileSize}}" >
        {{#file-picker
        accept=validMimeType
        preview=false
        dropzone=false
        fileLoaded=(action 'selectFile')
        readAs="readAsFile"
        errors=filePickerErrors}}
        {{gru-icon name="video_library"}}
        {{/file-picker}}
      </button>
    </div>
  {{/if}}
</div>
{{#if lableValue}}
  <div class="wysihtml-editor-lable">{{lableValue}}</div>
{{/if}}
<div id="wysihtml-editor{{editorIndex}}" data-placeholder={{placeholder}} class="rich-editor editor-box{{editorIndex}} {{if disableButtons 'not-editable' 'editable'}}"> {{safe-html value}}</div>
<div class="error-messages validation">
  {{#if showMessage}}
    <span class="error">
      {{v-get model valuePath 'message'}}
    </span>
  {{/if}}
</div>
