        </div>
        <div class="student-class-panel-body">
          {{#each pageContent as |class|}}
            {{#if (eq contentItem 'activeClassList')}}
              {{cards/gru-student-class-current-card
                classData=class
              }}
            {{else if (eq contentItem 'archivedClassList')}}
              {{cards/gru-student-class-current-card
                classData=class
              }}

                {{else if (eq contentItem 'independedCourses')}} 
                  {{cards/gru-student-independent-study-card 
                    course=class
                    percentage = coursePercentage
                    timeEta = timeDuration  
                  }}

            {{else}}
              {{cards/gru-student-featured-card
                course=class
                percentage = coursePercentage
                timeEta = timeDuration  
              }}
            {{/if}}
          {{/each}}
        </div>
    </div>
</div>
