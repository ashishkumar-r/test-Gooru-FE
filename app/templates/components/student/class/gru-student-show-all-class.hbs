              <a href="javascript:void(0)" {{action "onGoBack"}} class="back-icons-btn" aria-label="back">{{gru-icon name="arrow_back"}}</a>
           
            <span class="class-room-title">{{t (if (eq contentItem 'activeClassList') "student-home.all-class-rooms" "student-home.all-independent-study")}}</span>

            </div>
