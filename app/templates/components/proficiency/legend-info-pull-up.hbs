{{#if isLegendPullup}}
<div class="backdrop" {{action 'togglePullup'}}></div>
{{/if}}
<div class="legend-info-pull-up-container {{if isLegendPullup 'open-legend-pullup'}}">
    <div class="legend-info-panel">
        <div class="legend-info-panel-head" {{action 'togglePullup'}}>
            <span>{{t 'common.legend'}}</span>
            <div class="close-icon" >
                {{gru-icon name=(if isLegendPullup 'arrow_upward' 'arrow_downward')}}
            </div>
        </div>
        <div class="legend-list">
            <div class="proficiency-tags">
                <div class="proficiency-legends">
                    <div>
                        <div class="mastered legend">
                            <span class="box"></span>
                            <span class="title">{{t 'profile.proficiency.mastered'}}</span>
                        </div>
                        <span class="description">{{t 'mastery-legend'}}</span>
                    </div>
                    <div>
                        <div class="in-progress legend">
                            <span class="box"></span>
                            <span class="title">{{t 'profile.proficiency.in-progress'}}</span>
                        </div>
                        <span class="description">{{t 'in-progress-legend'}}</span>
                    </div>
                    <div>
                        <div class="not-started legend">
                            <span class="box"></span>
                            <span class="title">{{t 'profile.proficiency.not-started'}}</span>
                        </div>
                        <span class="description">{{t 'not-started-legend'}}</span>
                    </div>
                    <div>
                        <div class="show-gut legend">
                            <span class="box"></span>
                            <span class="title">{{t 'competencies-not-in-framework'}}</span>
                        </div>
                        <span class="description">{{t 'not-in-framework-legend'}}</span>
                    </div>
                    <div>
                        <div class="skyline legend">
                            <span class="box-skyline"></span>
                            <span class="title">{{t 'profile.proficiency.skyline'}}</span>
                        </div>
                        <span class="description">{{t 'skyline-legend'}}</span>
                    </div>
                    <div>
                        <div class="class-grade-line legend">
                            <span class="box-class-grade-line"></span>
                            <span class="title">{{t 'grade-selector.placeholder'}}</span>
                        </div>
                        <span class="description">{{t 'hi-line-legend'}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>