<ul class="multiple-choices">
  {{#each answers as |answer index|}}
    <li class="{{if answer.selected 'correct-answer'}} {{if answer.selected (if (or answer.correct isChooseOne) 'correct_answer' 'incorrect_answer')}}">
      {{#if answer.selected}}
        <span class="{{if (or answer.correct isChooseOne) 'correct' 'incorrect'}} {{if anonymous 'anonymous'}}">
          {{gru-icon name='radio_button_checked'}}
        </span>
      {{else}}
        <span class="column">{{gru-icon name='radio_button_unchecked'}}</span>
      {{/if}}
        <span class="answer-text {{if answer.correct 'correct-selection' 'incorrect-selection'}}">{{#unless isChooseOne}} <span class="answer-letter">({{answer-letter index}})</span> {{/unless}} {{{gru-math-text text=answer.text}}}</span>
    </li>
  {{/each}}
</ul>
