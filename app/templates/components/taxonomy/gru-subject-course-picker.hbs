<div class="btn-group clearfix">
  <button type="button" class="btn btn-primary btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    {{t 'common.add'}} {{selectedSubject.subjectTitle}} {{t 'common.course'}}
  </button>
  <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="caret"></span>
    <span class="sr-only">{{t "common.toggle-dropdown"}}</span>
  </button>
  <ul class="dropdown-menu courses">
    {{#each courses as |subjectCourse|}}
      <li>
        <label class="checkbox-inline">
          <input type="checkbox" aria-checked="false" style="padding-left:30px" checked={{contains subjectCourse.id selectedTaxonomyIds}} onclick={{action 'selectSubjectCourse' subjectCourse on='change'}} onkeypress={{action 'selectSubjectCourse' subjectCourse on='change'}} tabindex="1"> {{subjectCourse.title}}
        </label>
      </li>
    {{/each}}
  </ul>
</div>
