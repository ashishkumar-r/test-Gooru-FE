{{#unless isViewSingUp}}
<div class="login-container signup">
    <div class="form-container">
      <div class="img-container">
        <div class="gooru-logo"></div>
        <div class="tenant-logo"></div>
      </div>
      <form>
        <div class="form-group emial">
          <label for="userEmail">
            <span>{{t "login.enter-your-email"}}</span>
            {{validation/gru-input model=user valuePath='email' type='email' didValidate=didValidate inputId='userEmail'}}
            {{#if isShowErrormessage }}
              <div class="error-message">
                  <span class="error">{{t 'login.invalid-email'}}</span>
              </div>
            {{/if}}
          </label>
        </div>
        <div class="form-group text-center">
          <button type="submit" class="btn btn-success submit-btn" {{action "getUserTenantAccount"}}>{{t "common.submit"}}</button>
        </div>
      </form>
    </div>
    <div class="footer-contain">
    <div>{{t 'index.browseContent.footer.description_1'}}</div>
    <div class="login-link">
        <a {{action "userLogin"}} role="link" aria-label="login"> {{t "common.login"}} </a>
    </div>
  </div>
</div>
{{/unless}}


{{#if isViewSingUp}}
<div class="sign-up-container">
    <div class="head-container">
      <div class="sign-in-header">
        <div class="back">
          <span class="icon" {{action 'goBack'}}>{{gru-icon name='arrow_back'}}</span>
          <div class="title">{{t "common.signUp"}}</div>
        </div>
      </div>
      <div class="header-text">{{t 'common.update-signup-header-text'}}</div>
     <div class="sign-up-panel">
        <div class="tenant-list">
        {{#each tenantLists as |tenant|}} 
          <div class="tenant-info" {{action 'tenantLogin' tenant}}>
            <div class="tenant-log">
              {{#if tenant.imageUrl}}
                <img class="img-responsive log" src="{{tenant.imageUrl}}" alt="tenant image">
              {{else}}
                <span>{{avatar tenant.tenantName}}</span>
              {{/if}}
            </div>
            <div class="tenant-name">{{tenant.tenantName}}</div>
          </div>
        {{/each}}
      </div>
     </div>
    </div>
    {{#unless hasGooruAccount}}
    <div class="footer-container">
    <div class="footer-text">
    <span>{{t 'common.update-signup-footer-text'}}</span>
    </div>
    <div class="footer-text">
    <span>{{t 'common.update-signup-continue-text'}}</span>
    </div>
    <div class="sinup-link">
      <a {{action "singUp"}} role="link" aria-label="signup link">{{t 'common.update-signup-link'}}</a>
    </div>
  </div>
  {{/unless}}
</div>
{{/if}}
