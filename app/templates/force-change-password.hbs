<div class="controller change-password row" xmlns="http://www.w3.org/1999/html">
  <div class="modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
            <h3>{{t "change-password.title"}}</h3>
            <span class="message-text">{{t "force-change-password-message"}}</span>
        </div>
        <form {{action "changePassword" on="submit"}}>
          <div class="modal-body">
            <div class="wrapper">
              <div class="main">
                <div class="change-password-form">
                  <div class="form-group password">
                    <label for="password">
                      <span>{{t "reset-password.new-password"}}</span>
                      {{validation/gru-input model=profile valuePath='password' type='password' didValidate=didValidate}}
                    </label>
                  </div>
                  <div class="form-group password-confirm">
                    <label for="chPassword">
                      <span>{{t "reset-password.new-password-confirm"}}</span>
                      {{validation/gru-input model=profile valuePath='chPassword' type='password' didValidate=didValidate}}
                    </label>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <div class="submit-button form-group text-center">
              <button type="submit" class="btn btn-success submit">{{t "common.submit"}}
                {{gru-icon name= "keyboard_arrow_right" class=""}}
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
